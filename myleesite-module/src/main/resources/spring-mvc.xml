            <!--<mvc:mapping path="/**"/>-->
            <!--<bean class="com.jc.shop.module.sys.filter.MobileTypeInterceptor"/>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->
</beans>